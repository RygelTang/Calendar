<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.rygel.gd">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name=".app.APP"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.setting.theme.ThemeActivity"/>
        <activity android:name=".ui.index.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.event.impl.AddEventActivity"
            android:theme="@style/EventTheme" />
        <activity android:name=".ui.setting.index.impl.SettingsActivity" />
        <activity android:name=".ui.about.AboutActivity" />
        <activity
            android:name=".ui.edit.impl.EditEventActivity"
            android:theme="@style/EventTheme" />

        <!-- 重启服务 -->
        <service
            android:name=".service.RestartService"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <!-- 双进程保活 -->
        <service android:name=".service.LocalService" />
        <service
            android:name=".service.RemoteService"
            android:process=":remote" />

        <receiver
            android:name=".receiver.DateChangeBroadcastReceiver"
            android:label="DateChangeBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.DATE_CHANGED" />
                <action android:name="android.intent.action.TIMEZONE_CHANGED" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="design_width_in_dp"
            android:value="360" />
        <meta-data
            android:name="design_height_in_dp"
            android:value="640" />

    </application>

</manifest>